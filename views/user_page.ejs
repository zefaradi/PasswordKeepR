    <!-- these are place holders and need to be replaced with the actual sites from the db -->
    <h2>Websites</h2>
  <div class="site-group">
    <div class="website">
      <% for(let favourite of favourites) { %>
      <span><%=favourite.name%></span>
      <form method="GET" action="/edit/<%=favourite.id%>">
        <button type="submit" class="btn btn-primary">Edit</button>
      </form>
      <form method="POST" action="/delete"> <!-- route needs to be made to delete company from users table  -->
        <button type="submit" class="btn btn-primary">Delete</button>
      </form>
        <% } %>
      </div>
  </div>
  <div class="add-website">
    <h2>Add New Website</h2>
    <form method="GET" action="/create">
      <button type="submit" class="btn btn-primary">Add</button>
      </form>
  </div>

